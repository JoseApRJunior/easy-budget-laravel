{% extends "layout.twig" %}

{% block content %}
<div class="container-fluid py-4">
    <!-- Cabeçalho -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="bi bi-plus-circle me-2"></i>Nova Unidade
        </h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="/admin">Dashboard Admin</a></li>
                <li class="breadcrumb-item"><a href="/admin/units">Unidades</a></li>
                <li class="breadcrumb-item active">Nova</li>
            </ol>
        </nav>
    </div>

    <!-- Formulário -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
            <form action="/admin/units/store" method="POST">
                {{ csrf.field|raw }}
                <div class="row g-4">
                    <!-- Nome -->
                    <div class="col-md-8">
                        <div class="form-floating">
                            <input type="text" class="form-control {{ errors.name ? 'is-invalid' : '' }}" id="name"
                                name="name" placeholder="Nome da Unidade" value="{{ old.name ?? '' }}" required>
                            <label for="name">Nome da Unidade *</label>
                            {% if errors.name %}
                            <div class="invalid-feedback">{{ errors.name }}</div>
                            {% endif %}
                        </div>
                    </div>

                    <!-- Abreviação -->
                    <div class="col-md-4">
                        <div class="form-floating">
                            <input type="text" class="form-control {{ errors.abbreviation ? 'is-invalid' : '' }}" id="abbreviation"
                                name="abbreviation" placeholder="Abreviação" value="{{ old.abbreviation ?? '' }}" maxlength="10" required>
                            <label for="abbreviation">Abreviação *</label>
                            {% if errors.abbreviation %}
                            <div class="invalid-feedback">{{ errors.abbreviation }}</div>
                            {% endif %}
                            <div class="form-text">Ex: kg, m, un, l, etc.</div>
                        </div>
                    </div>

                    <!-- Slug será gerado automaticamente -->
                </div>

                <div class="mt-4 d-flex justify-content-between">
                    <a href="/admin/units" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Voltar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle me-2"></i>Salvar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}