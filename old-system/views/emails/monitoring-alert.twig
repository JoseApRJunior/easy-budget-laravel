                        <strong>{{ key|title|replace({'_': ' '}) }}:</strong>
                        {% if key == 'execution_time' %}
                            {{ "%.3f"|format(value) }} segundos
                        {% elseif key == 'memory_used' or key == 'threshold' %}
                            {% if value > 1048576 %}
                                {{ "%.2f"|format(value / 1048576) }} MB
                            {% elseif value > 1024 %}
                                {{ "%.2f"|format(value / 1024) }} KB
                            {% else %}
                                {{ value }} bytes
                            {% endif %}
                        {% else %}
                            {{ value }}
