{% extends "layout.twig" %}

{% block content %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4"><i class="bi bi-graph-up me-2"></i>Dashboard de Métricas</h2>
        </div>
    </div>

    <!-- Cards de Resumo -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6>Middlewares Ativos</h6>
                            <h3>5</h3>
                        </div>
                        <i class="bi bi-shield-check fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6>Taxa de Sucesso</h6>
                            <h3>98.5%</h3>
                        </div>
                        <i class="bi bi-check-circle fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6>Tempo Médio</h6>
                            <h3>45ms</h3>
                        </div>
                        <i class="bi bi-clock fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6>Execuções/Hora</h6>
                            <h3>1.2k</h3>
                        </div>
                        <i class="bi bi-activity fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Status dos Middlewares -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Status dos Middlewares</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Middleware</th>
                                    <th>Status</th>
                                    <th>Execuções</th>
                                    <th>Tempo Médio</th>
                                    <th>Última Execução</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><span class="badge bg-primary">AdminMiddleware</span></td>
                                    <td><span class="badge bg-success">Ativo</span></td>
                                    <td>245</td>
                                    <td>32ms</td>
                                    <td>há 2 min</td>
                                </tr>
                                <tr>
                                    <td><span class="badge bg-info">AuthMiddleware</span></td>
                                    <td><span class="badge bg-success">Ativo</span></td>
                                    <td>1,234</td>
                                    <td>18ms</td>
                                    <td>há 1 min</td>
                                </tr>
                                <tr>
                                    <td><span class="badge bg-secondary">GuestMiddleware</span></td>
                                    <td><span class="badge bg-success">Ativo</span></td>
                                    <td>89</td>
                                    <td>12ms</td>
                                    <td>há 5 min</td>
                                </tr>
                                <tr>
                                    <td><span class="badge bg-warning">ProviderMiddleware</span></td>
                                    <td><span class="badge bg-success">Ativo</span></td>
                                    <td>567</td>
                                    <td>28ms</td>
                                    <td>há 3 min</td>
                                </tr>
                                <tr>
                                    <td><span class="badge bg-dark">UserMiddleware</span></td>
                                    <td><span class="badge bg-success">Ativo</span></td>
                                    <td>890</td>
                                    <td>22ms</td>
                                    <td>há 1 min</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Ações Rápidas -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Ações Rápidas</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <a href="/admin/monitoring" class="btn btn-outline-primary w-100 mb-2">
                                <i class="bi bi-graph-up me-2"></i>Monitoramento Geral
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a href="/admin/monitoring/metrics" class="btn btn-outline-info w-100 mb-2">
                                <i class="bi bi-speedometer2 me-2"></i>Métricas Detalhadas
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a href="/admin/logs" class="btn btn-outline-secondary w-100 mb-2">
                                <i class="bi bi-terminal me-2"></i>Logs do Sistema
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}