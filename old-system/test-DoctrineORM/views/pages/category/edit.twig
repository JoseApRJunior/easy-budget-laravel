{% extends "layout.twig" %}

{% block content %}
<div class="container-fluid py-4">
    <!-- Cabeçalho -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="bi bi-pencil-square me-2"></i>Editar Categoria
        </h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="/admin">Dashboard Admin</a></li>
                <li class="breadcrumb-item"><a href="/admin/categories">Categorias</a></li>
                <li class="breadcrumb-item active">Editar</li>
            </ol>
        </nav>
    </div>

    <!-- Formulário -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
            <form action="/admin/categories/update" method="POST">
                {{ csrf.field|raw }}
                <input type="hidden" name="id" value="{{ category.id }}">

                <div class="row g-4">
                    <!-- Nome -->
                    <div class="col-md-12">
                        <div class="form-floating">
                            <input type="text" class="form-control {{ errors.name ? 'is-invalid' : '' }}" id="name"
                                name="name" placeholder="Nome da Categoria" value="{{ old.name ?? category.name }}"
                                required>
                            <label for="name">Nome da Categoria *</label>
                            {% if errors.name %}
                            <div class="invalid-feedback">{{ errors.name }}</div>
                            {% endif %}
                        </div>
                    </div>

                    <!-- Slug será gerado automaticamente -->
                </div>

                <div class="mt-4 d-flex justify-content-between">
                    <a href="/admin/categories" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Voltar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle me-2"></i>Salvar Alterações
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
