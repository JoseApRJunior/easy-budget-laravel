{% extends "layout.twig" %}



{% block content %}
<div class="container mt-5">
	<div class="row justify-content-center">
		<div class="col-md-8">
			<div class="card">
				<div class="card-body text-center">
					<h2 class="card-title text-warning">
						<i class="bi bi-clock"></i>
						Pagamento Pendente
					</h2>
					<p class="card-text">
						{{ message }}
					</p>
					<hr>
					<h4>Detalhes da Transação</h4>
					<ul class="list-unstyled">
						<li>
							<strong>ID da Transação:</strong>
							{{ payment_id }}
						</li>

						<li>
							<strong>Plano:</strong>
							{{ plan_name }}
						</li>
						<li>
							<strong>Valor:</strong>
							R$
							{{ plan_price|number_format(2, ',', '.') }}
						</li>
						<li>
							<strong>Data:</strong>
							{{ transaction_date|date("d/m/Y H:i:s") }}
						</li>
					</ul>

					<hr>
					<p>
						Fique tranquilo, você receberá uma notificação assim que o pagamento for processado.
					</p>
					<a href="/provider" class="btn btn-primary">Voltar para o Dashboard</a>
				</div>
			</div>
		</div>
	</div>
</div>
{% endblock %}
