{% extends "layout_pdf_base.twig" %}

{% block content %}
<div class="container p-4 print-content">
  <!-- Cabeçalho -->
  <div class="mb-4">
    <div class="row">
      <!-- Dados da Empresa -->
      <div class="col-6">
        <h5 class="fw-bold mb-2">{{ auth().company_name }}</h5>
        <div class="text-secondary small">
          <p class="mb-1">{{ auth().address }}</p>
          <p class="mb-1">
            {% if auth().cnpj %}
            CNPJ: {{ auth().cnpj }}
            {% else %}
            CPF: {{ auth().cpf }}
            {% endif %}
          </p>
          <p class="mb-1">Tel: {{ auth().phone }}</p>
          <p class="mb-0">Email: {{ auth().email_business }}</p>
        </div>
      </div>

      <!-- Número do Orçamento e Informações -->
      <div class="col-6 text-end">
        <h4 class="text-primary mb-2">ORÇAMENTO #{{ budget.code }}</h4>
        <div class="text-secondary small">
          <p class="mb-1">Emissão: {{ budget.created_at|date('d/m/Y') }}</p>
          <p class="mb-1">Validade: {{ budget.due_date|date('d/m/Y') }}</p>
        </div>
        {{ budget|status_badge|raw }}
      </div>
    </div>
  </div>

  <hr class="my-4">

  <!-- Dados do Cliente -->
  <div class="mb-4">
    <h6 class="text-secondary border-bottom pb-2">DADOS DO CLIENTE</h6>
    <div class="row mt-3">
      <div class="col-6">
        <p class="fw-medium mb-1">{{ budget.customer_name }}</p>
        {% if budget.cpf %}
        <p class="text-secondary small mb-1">CPF: {{ budget.cpf }}</p>
        {% endif %}
        {% if budget.cnpj %}
        <p class="text-secondary small mb-1">CNPJ: {{ budget.cnpj }}</p>
        {% endif %}
      </div>
      <div class="col-6 text-end">
        <p class="text-secondary small mb-1">Tel: {{ budget.phone }}</p>
        <p class="text-secondary small mb-1">Email: {{ budget.email }}</p>
      </div>
    </div>
  </div>

  <!-- Descrição do Orçamento -->
  {% if budget.description %}
  <div class="mb-4">
    <h6 class="text-secondary border-bottom pb-2">DESCRIÇÃO</h6>
    <p class="mt-3 mb-0">{{ budget.description }}</p>
  </div>
  {% endif %}

  <!-- Serviços Vinculados -->
  {% if services %}
  {% for service in services %}
  <div class="mb-4">
    <div class="bg-light p-3">
      <div class="d-flex justify-content-between align-items-center">
        <h6 class="mb-0">{{ service.category_name }}</h6>
        <span class="badge" style="background-color: {{ service.color }};">
          {{ service.status_name }}
        </span>
      </div>
    </div>

    <div class="text-secondary small mt-3 mb-3">
      <p class="mb-1">{{ service.description }}</p>
      <p class="mb-1">Data: {{ service.created_at|date('d/m/Y') }}</p>
      <p class="mb-0">Validade: {{ service.due_date|date('d/m/Y') }}</p>
    </div>

    <!-- Tabela de Itens do Serviço -->
    <div class="table-responsive">
      <table class="table table-borderless">
        <thead class="table-light">
          <tr>
            <th>Item</th>
            <th class="text-center" width="100">Qtd</th>
            <th class="text-end" width="140">Valor Unit.</th>
            <th class="text-end" width="140">Subtotal</th>
          </tr>
        </thead>
        <tbody>
          {% for item in service_items[service.id] %}
          <tr>
            <td>
              <p class="fw-medium mb-0">{{ item.name }}</p>
              {% if item.description %}
              <small class="text-secondary">{{ item.description }}</small>
              {% endif %}
            </td>
            <td class="text-center">{{ item.quantity }}</td>
            <td class="text-end">R$ {{ item.unit_value|number_format(2, ',', '.') }}</td>
            <td class="text-end">R$ {{ (item.quantity * item.unit_value)|number_format(2, ',', '.') }}</td>
          </tr>
          {% endfor %}
          <tr>
            <td colspan="3" class="text-end border-top pt-2">
              <strong>Total do Serviço:</strong>
            </td>
            <td class="text-end border-top pt-2">
              <strong>R$ {{ service.total|number_format(2, ',', '.') }}</strong>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  {% endfor %}

  <!-- Valor Total do Orçamento -->
  <div class="bg-primary text-white p-3 mb-4">
    <div class="row align-items-center">
      <div class="col-6">
        <h6 class="mb-0">VALOR TOTAL DO ORÇAMENTO</h6>
      </div>
      <div class="col-6 text-end">
        <h4 class="mb-0">R$ {{ budget.total|number_format(2, ',', '.') }}</h4>
      </div>
    </div>
  </div>
  {% else %}
  <div class="alert alert-info">Nenhum serviço vinculado.</div>
  {% endif %}

  <!-- Condições e Observações -->
  <div class="row">
    {% if budget.payment_terms %}
    <div class="col-md-6 mb-4">
      <h6 class="text-secondary border-bottom pb-2">CONDIÇÕES DE PAGAMENTO</h6>
      <p class="mt-3 mb-0">{{ budget.payment_terms }}</p>
    </div>
    {% endif %}
    <div class="col-md-6 mb-4">
      <h6 class="text-secondary border-bottom pb-2">OBSERVAÇÕES</h6>
      <div class="text-secondary small mt-3">
        <p class="mb-1">* Orçamento válido até {{ budget.due_date|date('d/m/Y') }}</p>
        <p class="mb-0">* Gerado em {{ "now"|date('d/m/Y H:i:s') }}</p>
      </div>
    </div>
  </div>

  <!-- Assinaturas -->
  <div class="row mt-5">
    <div class="col-6">
      <div class="text-center">
        <div class="border-top pt-2" style="display: inline-block; min-width: 200px;">
          <p class="mb-0">
            {{ auth().cnpj ? auth().company_name : auth().first_name ~ ' ' ~ auth().last_name }}
          </p>
        </div>
      </div>
    </div>
    <div class="col-6">
      <div class="text-center">
        <div class="border-top pt-2" style="display: inline-block; min-width: 200px;">
          <p class="mb-0">{{ budget.customer_name }}</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Botões para Impressão e Retorno -->
  <div class="d-print-none text-end mt-4">
    <button onclick="window.print()" class="btn btn-primary">
      <i class="bi bi-printer me-2"></i>Imprimir
    </button>
    <button onclick="history.back()" class="btn btn-outline-secondary ms-2">
      <i class="bi bi-arrow-left me-2"></i>Voltar
    </button>
  </div>
</div>
{% endblock %}

{% block styles %}
<style>
  /* Configurações de página */
  @page {
    margin: 15mm;
    size: A4 portrait;
  }

  /* Reset básico */
  * {
    margin: 0;
    padding: 0;
  }

  /* Estilos base */
  body {
    font-family: Arial, sans-serif;
    font-size: 12px;
    line-height: 1.4;
    color: #2c3e50;
  }

  /* Layout */
  .container {
    padding: 20px;
  }

  /* Grid simplificado */
  .row:after {
    content: "";
    display: table;
    clear: both;
  }

  .col-6 {
    float: left;
    width: 48%;
  }

  .col-6:last-child {
    float: right;
  }

  /* Tipografia */
  h4 {
    font-size: 16px;
  }

  h5 {
    font-size: 14px;
  }

  h6 {
    font-size: 12px;
  }

  .text-primary {
    color: #0d6efd;
  }

  .text-secondary {
    color: #6c757d;
  }

  .text-white {
    color: #ffffff;
  }

  .small {
    font-size: 11px;
  }

  /* Margens */
  .mb-4 {
    margin-bottom: 20px;
  }

  .mb-2 {
    margin-bottom: 10px;
  }

  .mb-1 {
    margin-bottom: 5px;
  }

  .mb-0 {
    margin-bottom: 0;
  }

  .mt-3 {
    margin-top: 15px;
  }

  .mt-5 {
    margin-top: 25px;
  }

  /* Padding */
  .p-3 {
    padding: 15px;
  }

  .pt-2 {
    padding-top: 10px;
  }

  .pb-2 {
    padding-bottom: 10px;
  }

  /* Alinhamentos */
  .text-end {
    text-align: right;
  }

  .text-center {
    text-align: center;
  }

  /* Bordas */
  .border-top {
    border-top: 1px solid #dee2e6;
  }

  .border-bottom {
    border-bottom: 1px solid #dee2e6;
  }

  /* Tabelas */
  .table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 15px;
  }

  .table th {
    background-color: #f8f9fa !important;
    padding: 8px;
    text-align: left;
    border-bottom: 2px solid #dee2e6;
    -webkit-print-color-adjust: exact;
    print-color-adjust: exact;
  }

  .table td {
    padding: 8px;
    border-bottom: 1px solid #dee2e6;
  }

  /* Componentes */
  .badge {
    display: inline-block;
    padding: 4px 8px;
    font-size: 11px;
    font-weight: bold;
    color: #ffffff;
  }

  .bg-light {
    background-color: #f8f9fa !important;
    -webkit-print-color-adjust: exact;
    print-color-adjust: exact;
  }

  .bg-primary {
    background-color: #0d6efd !important;
    color: #ffffff !important;
    -webkit-print-color-adjust: exact;
    print-color-adjust: exact;
  }

  hr {
    border: 0;
    border-top: 1px solid #dee2e6;
    margin: 15px 0;
  }

  /* Assinaturas */
  .signature-line {
    display: inline-block;
    min-width: 200px;
    border-top: 1px solid #000000;
    padding-top: 8px;
    text-align: center;
  }

  /* Footer */
  .footer {
    position: running(footer);
    text-align: center;
    font-size: 10px;
    padding-top: 10px;
  }

  @page {
    @bottom-center {
      content: element(footer);
    }
  }

  /* Ajustes de impressão */
  @media print {
    .d-print-none {
      display: none !important;
    }

    .page-break {
      page-break-before: always;
    }

    .avoid-break {
      page-break-inside: avoid;
    }
  }
</style>

{% endblock %}
