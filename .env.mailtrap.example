# Arquivo de exemplo para configuração do Mailtrap
# Copie este arquivo para .env e configure suas credenciais

APP_NAME="Easy Budget Laravel"
APP_ENV=local
APP_KEY=base64:your_app_key_here
APP_DEBUG=true
APP_URL=http://localhost:8000

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=easy_budget
DB_USERNAME=root
DB_PASSWORD=your_password

# Cache Configuration (recomendado Redis para produção)
CACHE_STORE=database
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Queue Configuration
QUEUE_CONNECTION=database

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120

# Mailtrap Configuration (OBRIGATÓRIO para desenvolvimento)
MAIL_MAILER=mailtrap
MAILTRAP_HOST=smtp.mailtrap.io
MAILTRAP_PORT=2525
MAILTRAP_USERNAME=your_mailtrap_username_here
MAILTRAP_PASSWORD=your_mailtrap_password_here

# Configurações alternativas (opcional)
# EMAIL_HOST=smtp.mailtrap.io
# EMAIL_PORT=2525
# EMAIL_USERNAME=your_mailtrap_username_here
# EMAIL_PASSWORD=your_mailtrap_password_here
# EMAIL_ENCRYPTION=tls

# Configurações de remetente padrão
MAIL_FROM_ADDRESS=admin@easybudget.com
MAIL_FROM_NAME="Easy Budget"

# Configurações opcionais para produção
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# AWS_DEFAULT_REGION=us-east-1

# Mercado Pago (para funcionalidades de pagamento)
MERCADO_PAGO_ACCESS_TOKEN=your_test_token
MERCADOPAGO_APP_ID=your_app_id
MERCADOPAGO_CLIENT_SECRET=your_client_secret

# Configurações de segurança
BCRYPT_ROUNDS=12
LOG_LEVEL=debug

# Configurações específicas do Easy Budget
VITE_APP_NAME="Easy Budget Laravel"
