{% extends "layout.twig" %}


{% block content %}
<div class="error-page min-vh-100 d-flex align-items-center py-1">
	<div class="container">
		<!-- Seção Principal -->
		<div class="row justify-content-center mb-5">
			<div class="col-lg-8 text-center">
				<!-- Ilustração Animada -->
				<div class="error-animation mb-4">
					<div class="display-1 text-primary mb-2">
						<i class="bi bi-emoji-dizzy"></i>
					</div>
					<h1 class="error-code display-2 fw-bold text-gradient mb-0">404</h1>
				</div>

				<!-- Mensagem de Erro -->
				<div class="mb-5">
					<h2 class="h3 mb-3">Oops! Página não encontrada</h2>
					<p class="lead text-muted mb-4">
						Desculpe, a página que você está procurando não existe ou foi movida.
					</p>

					<!-- Botões de Ação -->
					<div class="d-flex flex-column flex-sm-row justify-content-center gap-3">
						<a href="/" class="btn btn-primary btn-lg">
							<i class="bi bi-house-door me-2"></i>Página Inicial
						</a>
						<button type="button" class="btn btn-outline-primary btn-lg" onclick="window.history.back()">
							<i class="bi bi-arrow-left me-2"></i>Voltar
						</button>
					</div>
				</div>
			</div>
		</div>

		<!-- Seção de Sugestões -->
		<div class="row justify-content-center">
			<div class="col-lg-8">
				<div class="card border-0 shadow-sm">
					<div class="card-body p-4 p-lg-5">
						<div class="text-center mb-5">
							<div class="display-6 text-primary mb-2">
								<i class="bi bi-search-heart"></i>
							</div>
							<h3 class="h4 mb-0">Não encontrou o que procurava?</h3>
						</div>

						<div class="row g-4">
							<!-- Planos -->
							<div class="col-md-4">
								<div class="text-center p-4 h-100 rounded bg-light">
									<i class="bi bi-stack display-6 text-primary mb-3"></i>
									<h4 class="h6 mb-2">Nossos Planos</h4>
									<p class="small text-muted mb-3">
										Encontre o plano perfeito para suas necessidades
									</p>
									<a href="/plans" class="btn btn-sm btn-outline-primary">
										Ver Planos
									</a>
								</div>
							</div>

							<!-- Sobre -->
							<div class="col-md-4">
								<div class="text-center p-4 h-100 rounded bg-light">
									<i class="bi bi-info-circle display-6 text-primary mb-3"></i>
									<h4 class="h6 mb-2">Sobre Nós</h4>
									<p class="small text-muted mb-3">
										Conheça mais sobre o Easy Budget
									</p>
									<a href="/about" class="btn btn-sm btn-outline-primary">
										Saiba Mais
									</a>
								</div>
							</div>

							<!-- Suporte -->
							<div class="col-md-4">
								<div class="text-center p-4 h-100 rounded bg-light">
									<i class="bi bi-headset display-6 text-primary mb-3"></i>
									<h4 class="h6 mb-2">Suporte</h4>
									<p class="small text-muted mb-3">
										Precisa de ajuda? Estamos aqui para você
									</p>
									<a href="/support" class="btn btn-sm btn-outline-primary">
										Contatar
									</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{% endblock %}

{% block styles %}
{{ parent() }}
<style>
	.error-page {
		background-color: #f8f9fa;
	}

	.error-animation {
		animation: bounce 1s ease infinite;
	}

	.text-gradient {
		background: linear-gradient(45deg, var(--bs-primary), var(--bs-info));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}

	.card {
		border-radius: 1rem;
		transition: transform 0.2s ease;
	}

	.bg-light {
		background-color: #f8f9fa !important;
		transition: transform 0.2s ease, box-shadow 0.2s ease;
	}

	.bg-light:hover {
		transform: translateY(-5px);
		box-shadow: 0 .5rem 1rem rgba(0, 0, 0, .08);
	}

	.btn {
		border-radius: 0.5rem;
		padding: 0.75rem 1.5rem;
	}

	.btn-lg {
		min-width: 200px;
	}

	.display-6 {
		font-size: 2.5rem;
	}

	@keyframes bounce {

		0%,
		100% {
			transform: translateY(0);
		}

		50% {
			transform: translateY(-10px);
		}
	}

	@media (max-width: 576px) {
		.btn-lg {
			min-width: 100%;
			margin-bottom: 0.5rem;
		}

		.display-1 {
			font-size: 4rem;
		}

		.display-2 {
			font-size: 3.5rem;
		}
	}
</style>
{% endblock %}
