# ========================================
# EASY BUDGET LARAVEL - CONFIGURAÇÕES
# ========================================

# ========================================
# CONFIGURAÇÕES BÁSICAS DA APLICAÇÃO
# ========================================

APP_NAME="Easy Budget"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_TIMEZONE=America/Sao_Paulo
APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=pt_BR
APP_FAKER_LOCALE=pt_BR

APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# Configurações específicas do sistema
LANG=pt_BR
SESSION_TIMEOUT=30
MAX_TIME_UPDATED_SESSION=900

# ========================================
# CONFIGURAÇÕES DE BANCO DE DADOS
# ========================================

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=easybudget
DB_USERNAME=root
DB_PASSWORD=

# Database de teste (para PHPUnit)
DB_HOST_TEST=127.0.0.1
DB_PORT_TEST=3306
DB_DATABASE_TEST=easybudget_test
DB_USERNAME_TEST=root
DB_PASSWORD_TEST=

# ========================================
# CONFIGURAÇÕES DE EMAIL
# ========================================

# Configuração SMTP padrão
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=587
MAIL_USERNAME=your_username
MAIL_PASSWORD=your_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=admin@example.com
MAIL_FROM_NAME="${APP_NAME}"

# Configuração alternativa (Mailtrap)
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=587
EMAIL_USERNAME=your_username
EMAIL_PASSWORD=your_password
EMAIL_ENCRYPTION=tls
EMAIL_FROM=admin@example.com
EMAIL_FROM_NAME="Easy Budget"

# Configurações adicionais de email
MAIL_EHLO_DOMAIN=localhost
MAIL_LOG_CHANNEL=mail
MAIL_SCHEME=null

# ========================================
# CONFIGURAÇÕES DE SESSÃO
# ========================================

SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_TABLE=sessions
SESSION_CONNECTION=null
SESSION_SECURE_COOKIE=false
SESSION_COOKIE=laravel_session
SESSIONS_ALTER_IN_PLACE=false

# ========================================
# CONFIGURAÇÕES DE CACHE E FILAS
# ========================================

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
CACHE_STORE=database

# ========================================
# CONFIGURAÇÕES DO REDIS (opcional)
# ========================================

MEMCACHED_HOST=127.0.0.1
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ========================================
# CONFIGURAÇÕES DO MERCADO PAGO
# ========================================

# Desenvolvimento (tokens de teste)
MERCADO_PAGO_ACCESS_TOKEN=your_test_access_token
MERCADO_PAGO_WEBHOOK_SECRET=your_webhook_secret
MERCADOPAGO_CLIENT_ID=your_client_id
MERCADOPAGO_CLIENT_SECRET=your_client_secret
MERCADOPAGO_REDIRECT_URI=http://localhost:8000/integrations/mercadopago/callback
MERCADOPAGO_PUBLIC_KEY=your_public_key

# ========================================
# CONFIGURAÇÕES DO LARAVEL CASHIER (STRIPE)
# ========================================

STRIPE_KEY=your_stripe_key
STRIPE_SECRET=your_stripe_secret
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
CASHIER_CURRENCY=brl
CASHIER_CURRENCY_LOCALE=pt_BR
CASHIER_LOGGER=stack

# ========================================
# CONFIGURAÇÕES DE LOG
# ========================================

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ========================================
# CONFIGURAÇÕES DA AWS (para futuras integrações)
# ========================================

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ========================================
# CONFIGURAÇÕES DO VITE
# ========================================

VITE_APP_NAME="${APP_NAME}"
GOOGLE_MAPS_API_KEY=dummy_key

# ========================================
# CONFIGURAÇÕES DE AUTENTICAÇÃO SOCIAL
# ========================================

# Google OAuth 2.0
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# ========================================
# CONFIGURAÇÕES DE API EXTERNAS
# ========================================

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key

# ========================================
# CONFIGURAÇÕES DE FTP (para deploy)
# ========================================

FTP_HOST=ftp.your-host.com
FTP_USERNAME=your_ftp_username
FTP_PASSWORD=your_ftp_password
