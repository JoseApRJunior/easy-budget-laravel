# ==============================================================================
# EASY BUDGET - AMBIENTE E SEGURANÇA
# ==============================================================================
APP_NAME="Easy Budget"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_TIMEZONE=America/Sao_Paulo
APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=pt_BR
APP_FAKER_LOCALE=pt_BR

# Desempenho e Segurança
BCRYPT_ROUNDS=12
PHP_CLI_SERVER_WORKERS=4

# ==============================================================================
# BANCO DE DADOS (Configuração Padrão)
# ==============================================================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=easybudget
DB_USERNAME=root
DB_PASSWORD=

# ==============================================================================
# SERVIÇOS DE E-MAIL
# ==============================================================================
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="contato@easybudget.net.br"
MAIL_FROM_NAME="${APP_NAME}"

# ==============================================================================
# INTEGRAÇÃO: MERCADO PAGO
# ==============================================================================
MERCADO_PAGO_ACCESS_TOKEN=
MERCADO_PAGO_PUBLIC_KEY=
MERCADO_PAGO_WEBHOOK_SECRET=
MERCADOPAGO_CLIENT_ID=
MERCADOPAGO_CLIENT_SECRET=
MERCADOPAGO_REDIRECT_URI="${APP_URL}/integrations/mercadopago/callback"

# ==============================================================================
# INTEGRAÇÃO: GOOGLE (OAuth & Gemini)
# ==============================================================================
# Google Auth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI="${APP_URL}/auth/google/callback"

# AI Gemini
GEMINI_API_KEY=

# ==============================================================================
# SESSÃO, CACHE E LOGS
# ==============================================================================
LOG_CHANNEL=stack
LOG_LEVEL=debug

SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_SECURE_COOKIE=false

CACHE_STORE=file
QUEUE_CONNECTION=sync

# ==============================================================================
# CONFIGURAÇÕES DE SERVIDOR (OPCIONAIS)
# ==============================================================================
# FTP / Deployment
FTP_HOST=
FTP_USERNAME=
FTP_PASSWORD=
FTP_DIRECTORY=

# SSH / Acesso Remoto
SSH_HOST=
SSH_USERNAME=
SSH_PASSWORD=

# ==============================================================================
# FRONTEND (VITE)
# ==============================================================================
VITE_APP_NAME="${APP_NAME}"
