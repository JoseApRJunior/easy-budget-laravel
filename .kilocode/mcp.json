{
   "mcpServers": {
      "filesystem": {
         "command": "npx",
         "args": [
            "-y",
            "@modelcontextprotocol/server-filesystem",
            "C:/xampp/htdocs/easy-budget-laravel/"
         ],
         "alwaysAllow": [
            "list_allowed_directories",
            "get_file_info",
            "search_files",
            "move_file",
            "read_file",
            "read_text_file",
            "read_media_file",
            "write_file",
            "read_multiple_files",
            "edit_file",
            "directory_tree",
            "list_directory_with_sizes",
            "create_directory",
            "list_directory"
         ]
      }
   }
}
